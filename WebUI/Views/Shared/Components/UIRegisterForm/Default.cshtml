@model RegisterDto

<section class="h-100 bg-dark">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <div class="card card-registration my-4 shadow-lg">
                    <div class="row g-0">
                        <!-- Soldaki resim -->
                        <div class="col-xl-6 d-none d-xl-block">
                            <img src="~/feane-1.0.0/images/hero-bg.jpg"
                                 alt="Sample photo"
                                 class="img-fluid rounded-start h-100"
                                 style="object-fit: cover;" />
                        </div>

                        <!-- Sağdaki form -->
                        <div class="col-xl-6">
                            <div class="card-body p-md-5 text-black">
                                <form asp-action="Index" method="post" novalidate>
                                    <h3 class="mb-5 text-uppercase">Admin Registration Form</h3>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" asp-for="Name" class="form-control form-control-lg @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                                <label class="form-label" asp-for="Name">First Name</label>
                                                <span asp-validation-for="Name" class="invalid-feedback"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" asp-for="Surname" class="form-control form-control-lg @(ViewData.ModelState["Surname"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                                <label class="form-label" asp-for="Surname">Last Name</label>
                                                <span asp-validation-for="Surname" class="invalid-feedback"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="text" asp-for="UserName" class="form-control form-control-lg @(ViewData.ModelState["UserName"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                                <label class="form-label" asp-for="UserName">User Name</label>
                                                <span asp-validation-for="UserName" class="invalid-feedback"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                <input type="email" asp-for="Email" class="form-control form-control-lg @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                                <label class="form-label" asp-for="Email">Email</label>
                                                <span asp-validation-for="Email" class="invalid-feedback"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div class="form-outline">
                                            <input type="tel" asp-for="PhoneNumber" class="form-control form-control-lg @(ViewData.ModelState["PhoneNumber"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                            <label class="form-label" asp-for="PhoneNumber">Phone Number</label>
                                            <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <div class="form-outline">
                                            <input type="password" asp-for="Password" class="form-control form-control-lg @(ViewData.ModelState["Password"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                                            <label class="form-label" asp-for="Password">Password</label>
                                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" class="btn btn-warning btn-lg ms-2">Signup</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

