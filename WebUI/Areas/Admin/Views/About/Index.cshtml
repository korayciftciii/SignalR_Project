
@model UpdateAboutDto
<h4 class="page-title">About Section</h4>

<div class="card">
	<div class="card-header">
		<div class="card-title">Update Form</div>
	</div>
	<form asp-action="Index" method="post">
		<div class="card-body">
			<input asp-for="AboutId" type="hidden" />
			<div class="form-group">
				<label asp-for="Title">Title</label>
				<input asp-for="Title" type="text" class="form-control input-pill">
			</div>
			<div class="form-group">
				<label asp-for="Description">Description</label>
				<textarea class="form-control" asp-for="Description" rows="5"></textarea>
			</div>
			<div class="form-group">
				<label asp-for="ImageUrl">Image Url</label>
				<input asp-for="ImageUrl" type="text" class="form-control input-pill">
			</div>
			<div class="form-group">
				<img width="50" height="50" src="@Model.ImageUrl" alt="@Model.Title" />
			</div>
		</div>
		<div class="card-action">
			<button class="btn btn-success" type="submit"><i class="la la-save"></i> Save</button>
		</div>
	</form>
</div>