@model UpdateSliderDto
<h4 class="page-title">Update Feature</h4>

<div class="card">
	<div class="card-header">
		<div class="card-title">Update Form</div>
	</div>
	<form asp-action="SliderUpdate" method="post" novalidate>
		<input type="hidden" asp-for="SliderId"/>
		<div class="card-body">
			<div class="form-group">
				<label asp-for="SliderTitle">Slider Title</label>
				<input asp-for="SliderTitle" type="text" class="form-control input-pill">
				<span asp-validation-for="SliderTitle" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SliderDescription">Description</label>
				<textarea class="form-control" asp-for="SliderDescription" rows="5"></textarea>
				<span asp-validation-for="SliderDescription" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ButtonLabel">Button Text</label>
				<input asp-for="ButtonLabel" type="text" class="form-control input-pill">
				<span asp-validation-for="ButtonLabel" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FeatureStatus">Is Active</label>
				<input asp-for="FeatureStatus" type="checkbox"  data-toggle="toggle" data-onstyle="success" data-style="btn-round">
			</div>
		</div>
		<div class="card-action">
			<button class="btn btn-success" type="submit"><i class="la la-save"></i> Save</button>
			<a class="btn btn-danger" asp-action="Index" asp-controller="Slider" asp-area="Admin"><i class="la la-close"></i> Cancel</a>
		</div>
	</form>
</div>