@model List<ResultTestimonialDto>
@{
	int count = 0;
}
<h4 class="page-title">Testimonials</h4>
<div class="card">
	<div class="card-header">
		<div class="card-title">All Comments</div>
		<a class="btn btn-info" asp-action="TestimonialAdd" asp-controller="Testimonial" asp-area="Admin"><i class="la la-plus"></i> Add New Comment</a>
	</div>
	<div class="card-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">User Image</th>
					<th scope="col">Customer Name</th>
					<th scope="col"> Title</th>
					<th scope="col"> Comment</th>
					<th scope="col">Created At</th>
					<th scope="col">Comment Status</th>
					<th scope="col">Update</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					count++;
					<tr>
						<td>@count</td>
						<td><img width="25" height="25" src="@item.ImageUrl" alt="@item.CustomerFullName" /></td>
						<td>@item.CustomerFullName</td>
						<td>@item.Title</td>
						<td>@item.Comment</td>
						<td><span class="badge badge-primary">@item.CreatedDate.ToString("dd.MM.yyyy hh:mm tt", CultureInfo.InvariantCulture)</span></td>
						<td>
							@if (item.CommentStatus)
							{
								<span class="badge badge-success">Active</span>
							}
							else
							{
								<span class="badge badge-danger">Passive</span>
							}
						</td>
						<td><a asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialUpdate" asp-route-testimonialId="@item.TestimonialId" class="btn btn-success"><i class="la la-edit"></i> Update</a></td>
						<td><a asp-area="Admin" asp-controller="Testimonial" asp-action="TestimonialDelete" asp-route-testimonialId="@item.TestimonialId" class="btn btn-danger"><i class="la la-trash"></i> Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>