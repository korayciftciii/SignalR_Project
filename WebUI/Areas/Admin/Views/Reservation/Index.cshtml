@model List<ResultReservationDto>
<h4 class="page-title">Reservations</h4>
<div class="card">
	<div class="card-header">
		<div class="card-title">All Reservations</div>
		<a class="btn btn-info" asp-action="ReservationAdd" asp-controller="Reservation" asp-area="Admin"><i class="la la-plus"></i> Add New Reservation</a>
	</div>
	<div class="card-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Customer Name</th>
					<th scope="col">Phone Number</th>
					<th scope="col">Customer Email</th>
					<th scope="col">Number Of People</th>
					<th scope="col">Reservation Date</th>
					<th scope="col">Update</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ReservationId</td>
						<td>@item.CustomerName</td>
						<td>@item.PhoneNumber</td>
						<td>@item.UserMail</td>
						<td><span class="badge badge-count">@item.NumberOfCustomer.ToString()</span></td>
						<td><span class="badge badge-primary">@item.ReservationDate.ToString("dd.MM.yyyy hh:mm tt", CultureInfo.InvariantCulture)</span></td>

						<td><a asp-area="Admin" asp-controller="Reservation" asp-action="ReservationUpdate" asp-route-reservationId="@item.ReservationId" class="btn btn-success"><i class="la la-edit"></i> Update</a></td>
						<td><a asp-area="Admin" asp-controller="Reservation" asp-action="ReservationDelete" asp-route-reservationId="@item.ReservationId" class="btn btn-danger"><i class="la la-trash"></i> Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>