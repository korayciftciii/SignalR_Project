@model CreateReservationDto
<h4 class="page-title">Add New Reservation</h4>

<div class="card">
	<div class="card-header">
		<div class="card-title">Insertion Form</div>
	</div>
    <form asp-action="ReservationAdd" method="post" novalidate>
        <div class="card-body">

            <div class="form-group">
                <label asp-for="CustomerName">Customer Name</label>
                <input asp-for="CustomerName" type="text" class="form-control input-pill" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control input-pill" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserMail">Email</label>
                <input asp-for="UserMail" type="email" class="form-control input-pill" />
                <span asp-validation-for="UserMail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumberOfCustomer">Number Of Customers</label>
                <input asp-for="NumberOfCustomer" type="number" min="1" class="form-control input-pill" />
                <span asp-validation-for="NumberOfCustomer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReservationDate">Reservation Date & Time</label>
                <input asp-for="ReservationDate" type="datetime-local" class="form-control input-pill" />
                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>

        </div>

        <div class="card-action">
            <button class="btn btn-success" type="submit">
                <i class="la la-check-circle"></i> Submit
            </button>
            <a class="btn btn-danger" asp-action="Index" asp-controller="Reservation" asp-area="Admin">
                <i class="la la-close"></i> Cancel
            </a>
        </div>
    </form>
</div>