
@model CreateNotificationDto
<h4 class="page-title">Add New Notification</h4>

<div class="card">
	<div class="card-header">
		<div class="card-title">Insertion Form</div>
	</div>
	<form asp-action="NotificationAdd" method="post" novalidate>
		<div class="card-body">
			<div class="form-group">
				<label asp-for="NotificationType">Notification Type</label>
				<select class="form-control input-pill" asp-for="NotificationType">
					<option >Choose a type</option>
					<option value="New Reservation">New Reservation</option>
					<option value="New Comment">New Comment</option>
					<option value="New Order">New Order</option>
				</select>
				<span asp-validation-for="NotificationType" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description">Description</label>
				<textarea class="form-control" asp-for="Description" rows="5"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			
		</div>
		<div class="card-action">
			<button class="btn btn-success" type="submit"><i class="la la-check-circle"></i> Submit</button>
			<a class="btn btn-danger" asp-action="Index" asp-controller="Notification" asp-area="Admin"><i class="la la-close"></i> Cancel</a>
		</div>
	</form>
</div>