@model CreateRestaurantTableDto
<h4 class="page-title">Add New Table</h4>

<div class="card">
    <div class="card-header">
        <div class="card-title">Insertion Form</div>
    </div>
    <form asp-action="RestaurantTableAdd" method="post" novalidate>
        <div class="card-body">

            <div class="form-group">
                <label asp-for="TableNumber">Table Number</label>
                <input asp-for="TableNumber" type="text" class="form-control input-pill" />
                <span asp-validation-for="TableNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity">Capacity</label>
                <input asp-for="Capacity" type="number" min="1" class="form-control input-pill" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
        </div>

        <div class="card-action">
            <button class="btn btn-success" type="submit">
                <i class="la la-check-circle"></i> Submit
            </button>
            <a class="btn btn-danger" asp-action="Index" asp-controller="RestaurantTable" asp-area="Admin">
                <i class="la la-close"></i> Cancel
            </a>
        </div>
    </form>
</div>