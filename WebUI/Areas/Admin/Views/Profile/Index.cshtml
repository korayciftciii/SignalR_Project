
@model UserProfileDto

<h4 class="page-title">Update Profile</h4>

<div class="card">
    <div class="card-header">
        <div class="card-title">Insertion Form</div>
    </div>
    <form  method="post" novalidate>
        <div class="card-body">

            <div class="form-group">
                <label asp-for="Name">First Name</label>
                <input asp-for="Name" type="text" class="form-control input-pill" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname">Surname </label>
                <input asp-for="Surname" type="text" class="form-control input-pill" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserName">User Name</label>
                <input asp-for="UserName" type="text" class="form-control input-pill" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control input-pill" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control input-pill" />
                <label class="form-label" asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="password" asp-for="ConfirmPassword" class="form-control input-pill" />
                <label class="form-label" asp-for="ConfirmPassword">Confirm Your Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

        </div>
        <div class="card-action">
            <button class="btn btn-success" type="submit">
                <i class="la la-save"></i> Save
            </button>
        </div>
    </form>
</div>
