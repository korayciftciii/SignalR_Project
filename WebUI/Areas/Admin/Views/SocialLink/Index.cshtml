@model List<ResultSocialLinkDto>
<h4 class="page-title">Social Links</h4>
<div class="card">
	<div class="card-header">
		<div class="card-title">All Links</div>
		<a class="btn btn-info" asp-action="LinkAdd" asp-controller="SocialLink" asp-area="Admin"><i class="la la-plus"></i> Add New Link</a>
	</div>
	<div class="card-body">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Icon</th>
					<th scope="col">PlatformName</th>
					<th scope="col">Update</th>
					<th scope="col">Delete</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.SocialLinkId</td>
						<td><i class="@item.IconClass"></i></td>
						<td><a href="@item.Url" target="_blank">@item.PlatformName <i class="la la-external-link"></i></a></td>
						<td><a asp-area="Admin" asp-controller="SocialLink" asp-action="LinkUpdate" asp-route-linkId="@item.SocialLinkId" class="btn btn-success"><i class="la la-edit"></i> Update</a></td>
						<td><a asp-area="Admin" asp-controller="SocialLink" asp-action="LinkDelete" asp-route-linkId="@item.SocialLinkId" class="btn btn-danger"><i class="la la-trash"></i> Delete</a></td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>